# ADDED VIA ANSIBLE

# CONVENIENCE ALIASES
alias ll="ls -la"
alias sync-config="ansible-pull -U https://github.com/brotherkaif/config.git"
alias sync-dotfiles="ansible-pull -U https://github.com/brotherkaif/config.git --tags dotfiles"
alias sync-local-config="ansible-playbook $HOME/2-areas/config/local.yml"
alias sync-local-dotfiles="ansible-playbook $HOME/2-areas/config/local.yml --tags dotfiles"

# GIT ALIASES
alias lg="lazygit"
alias gst="git status"
alias ga="git add"
alias gaa="git add ."
alias gc="git commit"
alias gcm="git commit -m"
alias gco="git checkout"

# APP ALIASES
alias tmux="tmux -2"

# PRODUCTIVITY ALIASES
alias scratch="$HOME/bin/scratch.sh"
alias dev-notes="cd $HOME/3-resources/notes/dev-notes && nvim -c ':Telescope file_browser' README.md"
alias til="echo '$(date "+%y-%m-%d %H.%M.%S"):$1' >> $HOME/3-resources/notes/til.md"
alias til-show="nvim -c ':Telescope current_buffer_fuzzy_find' $HOME/3-resources/notes/til.md"
